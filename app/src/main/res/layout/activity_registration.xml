<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity"
    android:fitsSystemWindows="true"
    android:background="@drawable/splash_background">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/regular_logo"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ll_phone"
            android:gravity="center">

            <com.hbb20.CountryCodePicker
                android:layout_height="wrap_content"
                app:ccp_defaultNameCode="TN"
                android:layout_width="wrap_content"
                app:ccp_contentColor="@color/buttonsColor"
                app:ccp_arrowColor="@color/buttonsColor"
                android:background="@android:color/transparent"
                android:focusableInTouchMode="true"
                android:id="@+id/countryCodeHolder"/>
            <EditText
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:focusableInTouchMode="true"
                android:inputType="phone"
                android:id="@+id/edt_phone"
                android:hint="96 52 84 12"
                android:textSize="25sp"
                android:textAlignment="center"
                android:backgroundTint="@color/buttonsColor"
                android:textColorHint="@color/buttonsColor"
                tools:ignore="TextFields"
                android:textColor="@color/buttonsColor"
                android:importantForAutofill="no"
                tools:targetApi="lollipop" />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/enter_verification_code"
            android:textSize="27sp"
            android:visibility="gone"
            android:id="@+id/txt_enter_verif"
            android:textColor="@color/colorTextPrimary"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:text="please enter the verification code
                            sent to"
            android:gravity="center"
            android:textSize="15sp"
            android:id="@+id/txt_please_enter_verif"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginBottom="30dp"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="6"
            android:layout_marginTop="30dp"
            android:hint="@string/enter_your_code_here"
            android:id="@+id/edt_confirm_code"
            android:layout_margin="5dp"
            android:textColor="@color/colorTextPrimary"
            android:textColorHint="@color/buttonsColor"
            android:visibility="gone"
            android:gravity="center"
            android:layout_gravity="center"
            android:backgroundTint="@color/buttonsColor"
            android:inputType="number"
            android:importantForAutofill="no" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/ll_resend"
            android:visibility="gone"
            android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/buttonsColor"
            android:textSize="15sp"
            android:text="@string/don_t_get_the_code"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/buttonsColor"
                android:textStyle="bold"
                android:clickable="true"
                android:id="@+id/txt_resend"
                android:textSize="15sp"
                android:text="@string/resend"
                android:focusable="true" />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/an_sms_may_be_sent_to_your_phone"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:textColor="@color/colorTextPrimary"
            android:id="@+id/txt_any_sms"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/continu"
            android:id="@+id/btn_continue"
            android:background="@drawable/btn_continu"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
</RelativeLayout>