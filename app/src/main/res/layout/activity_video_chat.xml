<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context=".VideoChatActivity">




    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/background_dark"
            android:id="@+id/subscriber_container">

            <FrameLayout
                android:layout_width="130dp"
                android:layout_height="180dp"
                android:layout_gravity="end"
                android:layout_margin="20dp"
                android:id="@+id/publisher_container"
                android:background="@android:color/holo_red_light"/>
        </FrameLayout>


    </FrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp">

        <ToggleButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/btn_sound"
            android:id="@+id/toggle_sound_state"
            android:layout_gravity="center"
            android:textOn=""
            android:textOff=""
            android:layout_marginEnd="20dp"/>
        <ToggleButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/btn_video"
            android:textOn=""
            android:textOff=""
            android:id="@+id/toggle_video_state"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/end_call"
            android:id="@+id/btn_end_video_call"/>
        <ToggleButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/btn_door"
            android:textOn=""
            android:textOff=""
            android:id="@+id/toggle_door_state"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"/>
        <ToggleButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/btn_swap_camera"
            android:textOn=""
            android:textOff=""
            android:id="@+id/toggle_swap_state"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"/>
    </LinearLayout>
</RelativeLayout>